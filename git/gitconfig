[alias]
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        ci = commit
        br = branch
        co = checkout
        cl = clean
        rt = remote
        pl = pull --rebase
        ri = rebase -i
        rv = remote -v
        mnof = merge --no-ff

[push]
        default = current

[color]
        ui = true

[credential]
        helper = cache --timeout=3600

[help]
        autocorrect = 1

[rerere]
        enabled = 1

[merge]
        ff=only

[core]
        editor = vim

[filter "media"]
        clean = git media clean %f
        smudge = git media smudge %f
        required = true
